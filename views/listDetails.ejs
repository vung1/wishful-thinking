<% layout('layouts/boilerplate')%>
<div class="container" style="background-color: #EDE1D4;">
    <img class="mb-3" style="cursor: pointer;" src="https://static.thenounproject.com/png/344330-200.png" alt="" onclick="history.back()" width="50">
    <div class="d-flex justify-content-center pb-3">
        <h1 style="color: #3C1518"><u>List Details</u></h1>
    </div>

    <div>
        <h4><b>Name: </b></h4>
        <p><%=wishlistDetails.name%></p>
    </div>

    <div>
        <h4><b>Occasion: </b></h4>
        <p><%=wishlistDetails.occasion%></p>
    </div>

    <div>
        <h4><b>Date: </b></h4>
        <p><%=wishlistDetails.date%></p>
    </div>

    <div>
        <div class="d-flex justify-content-between align-items-end">
            <h4><b>Items:</b></h4>
            <p class="text"><a href="/addItem/<%=wishlistDetails.name%>" style="color: #395129; font-weight: bold">add item</a></p>
        </div>
        <div class="text">
            <ul class="list-group list-group-flush">
                <% if (wishlistDetails.items) { %>
                    <% for (let item of wishlistDetails.items ){%>
                            <li class="list-group-item d-flex justify-content-between">
                                <a href="/listItemDetails/<%=wishlistDetails.name%>/<%=item.name%>"><%=item.name%></a>
                                <form method="GET" action="/removeListDetailsItem/<%=wishlistDetails.name%>/<%=item.name%>">
                                    <button style="border: none; background-color: white;">Delete Item</button>
                                </form>
                            </li>
                    <% } %>
                <% } %>
              </ul>
        </div>
    </div>
</div>